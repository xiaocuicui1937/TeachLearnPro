<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9FAFDFF"
    android:orientation="vertical">

    <include layout="@layout/common_title" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <com.allen.library.SuperTextView
            android:id="@+id/stv_fragment_profile_avator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            app:layout_constraintTop_toTopOf="parent"
            app:sDividerLineType="none"
            app:sLeftTextColor="@color/black"
            app:sLeftTextSize="@dimen/sp_14"
            app:sLeftTextString="头像"
            app:sLeftViewMarginLeft="20dp"
            app:sRightTvDrawableLeft="@drawable/test_avator"
            app:sRightTvDrawableRight="@drawable/ic_right_arraw"
            app:sRightViewMarginRight="20dp" />

        <View
            android:id="@+id/view_first"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:background="#3C3C434A"
            app:layout_constraintTop_toBottomOf="@+id/stv_fragment_profile_avator" />

        <com.allen.library.SuperTextView
            android:id="@+id/stv_fragment_profile_nick"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="7dp"
            app:layout_constraintTop_toBottomOf="@+id/view_first"
            app:sDividerLineType="none"
            app:sLeftTextColor="@color/black"
            app:sLeftTextSize="@dimen/sp_14"
            app:sLeftTextString="昵称"
            app:sLeftViewMarginLeft="20dp"
            app:sRightTextString="爱学习爱直播"
            app:sRightTvDrawableRight="@drawable/ic_right_arraw"
            app:sRightViewMarginRight="20dp"
            app:sRightTextColor="#999999FF"/>

        <View
            android:id="@+id/view_second"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:background="#3C3C434A"
            app:layout_constraintTop_toBottomOf="@+id/stv_fragment_profile_nick" />

        <com.allen.library.SuperTextView
            android:id="@+id/stv_fragment_profile_location"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="7dp"
            app:layout_constraintTop_toBottomOf="@+id/view_second"
            app:sDividerLineType="none"
            app:sLeftTextColor="@color/black"
            app:sLeftTextSize="@dimen/sp_14"
            app:sLeftTextString="地区"
            app:sLeftViewMarginLeft="20dp"
            app:sRightTextString="江苏 南京"
            app:sRightTvDrawableRight="@drawable/ic_right_arraw"
            app:sRightViewMarginRight="20dp"
            app:sRightTextColor="#999999FF"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:background="#3C3C434A"
            app:layout_constraintTop_toBottomOf="@+id/stv_fragment_profile_location" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>