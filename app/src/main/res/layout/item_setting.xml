<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.allen.library.SuperTextView
        android:id="@+id/stv_fragment_setting"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toTopOf="parent"
        app:sDividerLineType="none"
        app:sLeftTextColor="@color/black"
        app:sLeftTextSize="@dimen/sp_14"
        app:sLeftTextString="系统学习提醒"
        app:sLeftViewMarginLeft="20dp"
        app:sRightTextColor="#999999FF"
        app:sRightViewMarginRight="20dp"
        app:sRightViewType="switchBtn"/>

    <View
        android:id="@+id/divider_location"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:background="#3C3C434A"
        app:layout_constraintTop_toBottomOf="@+id/stv_fragment_setting" />
</androidx.constraintlayout.widget.ConstraintLayout>