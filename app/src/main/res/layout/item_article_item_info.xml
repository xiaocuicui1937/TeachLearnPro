<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_4">

    <TextView
        android:id="@+id/tv_item_airticle_item_detail_first"
        android:layout_width="19dp"
        android:layout_height="19dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/sp_circle_first"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_item_airticle_item_content" />

    <TextView
        android:id="@+id/tv_item_airticle_item_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="如何抓住机遇？怎样成为高手？"
        android:textColor="#ff000000"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/tv_item_airticle_item_detail_first"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>




