<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="18dp"
    android:layout_marginEnd="18dp"
    android:layout_marginBottom="22dp"
    android:background="@drawable/bg_rect_live_back">

    <TextView
        android:id="@+id/tv_item_plan_back_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:text="危机管理：人人喊“开”的35+，
如何避免危机？"
        android:textColor="#ffffffff"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/iv_item_plan_back_avator"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_item_plan_back_avator"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/test_plan_back_avator"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_item_plan_back_refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_plan_back_refresh"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_item_plan_back_teach_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_4"
        android:text="10-21 20:00"
        android:textColor="#ffffffff"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_item_plan_back_teach_title"
        app:layout_constraintStart_toStartOf="@+id/tv_item_plan_back_teach_title" />

    <TextView
        android:id="@+id/tv_item_plan_back_teach_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10"
        android:text="讲师组"
        android:textColor="#ffffffff"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_item_plan_back_title" />

    <TextView
        android:id="@+id/tv_item_plan_back_teach_teacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:text="淮海市金牌讲师"
        android:textColor="#ffffffff"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_item_plan_back_teach_title"
        app:layout_constraintStart_toEndOf="@+id/tv_item_plan_back_teach_title"
        app:layout_constraintTop_toTopOf="@+id/tv_item_plan_back_teach_title" />
</androidx.constraintlayout.widget.ConstraintLayout>