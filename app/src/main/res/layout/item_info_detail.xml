<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dp_10"
    android:layout_marginTop="@dimen/dp_10"
    android:layout_marginEnd="@dimen/dp_10"
    android:paddingTop="@dimen/dp_4"
    android:paddingBottom="@dimen/dp_4"
    android:background="@drawable/sp_rect_round_white">

    <ImageView
        android:id="@+id/iv_item_airticle_item_detail_logo"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:scaleType="centerInside"
        android:src="@mipmap/ic_launcher_round"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_item_airticle_item_detail_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="@dimen/dp_10"
        android:text="如何抓住机遇？怎样成为高手？"
        android:textColor="#ff000000"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_item_airticle_item_detail_logo"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_item_airticle_item_detail_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:text="如何抓住机遇？怎样成为高手？"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/iv_item_airticle_item_detail_logo"
        app:layout_constraintStart_toStartOf="@+id/tv_item_airticle_item_detail_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_airticle_item_detail_content" />

    <TextView
        android:id="@+id/tv_item_airticle_item_detail_read_collect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center"
        android:text="阅读100 收藏1000"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@+id/tv_item_airticle_item_detail_author"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_airticle_item_detail_author" />
</androidx.constraintlayout.widget.ConstraintLayout>




