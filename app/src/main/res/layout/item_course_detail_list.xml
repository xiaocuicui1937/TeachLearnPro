<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="18dp"
    android:layout_marginTop="12dp"
    android:layout_marginEnd="18dp"
    android:background="#F9FAFDFF">

    <TextView
        android:id="@+id/tv_item_course_detail_list"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:text="第2讲：太极二章"
        android:textColor="#ff000000"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/iv_item_course_detail_play"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_item_course_detail_list_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:paddingBottom="13dp"
        android:text="30分57秒 | 2020-10-16"
        android:textColor="#ff999999"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/tv_item_course_detail_list"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_course_detail_list" />

    <ImageView
        android:id="@+id/iv_item_course_detail_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:src="@drawable/ic_play"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>