<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/iv_layout_qrcode_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginBottom="9dp"
        android:paddingEnd="12dp"
        android:src="@drawable/ic_close"
        app:layout_constraintBottom_toTopOf="@+id/iv_layout_qrcode"
        app:layout_constraintStart_toEndOf="@+id/iv_layout_qrcode" />

    <TextView
        android:id="@+id/tv_layout_qrcode_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="4dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/iv_layout_qrcode"
        app:layout_constraintStart_toStartOf="@+id/iv_layout_qrcode"
        app:layout_constraintTop_toBottomOf="@+id/iv_layout_qrcode_close" />

    <ImageView
        android:id="@+id/iv_layout_qrcode"
        app:layout_constraintTop_toBottomOf="@+id/tv_layout_qrcode_title"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <View
        android:id="@+id/view_divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="17dp"
        android:background="#227070FF"
        app:layout_constraintEnd_toEndOf="@+id/iv_layout_qrcode"
        app:layout_constraintStart_toStartOf="@+id/iv_layout_qrcode"
        app:layout_constraintTop_toBottomOf="@+id/iv_layout_qrcode" />

    <TextView
        android:id="@+id/tv_layout_qrcode_save_qr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:gravity="center"
        android:lineSpacingExtra="7dp"
        android:paddingBottom="20dp"
        android:text="长按保存二维码\n加客服领取房间密码听课"
        android:textColor="#ff666666"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/iv_layout_qrcode"
        app:layout_constraintStart_toStartOf="@+id/iv_layout_qrcode"
        app:layout_constraintTop_toBottomOf="@+id/view_divider" />
</androidx.constraintlayout.widget.ConstraintLayout>