<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/common_title" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#F9FAFDFF"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:text="当前位置" />

    <com.allen.library.SuperTextView
        android:id="@+id/stv_fragment_location_selected"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="7dp"
        app:sDividerLineType="none"
        app:sLeftTextColor="@color/black"
        app:sLeftTextSize="@dimen/sp_14"
        app:sLeftTextString="石家庄"
        app:sLeftViewMarginLeft="20dp"
        app:sRightTvDrawableRight="@drawable/ic_right_arraw"
        app:sRightViewMarginRight="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#F9FAFDFF"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:text="全部地区" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_fragment_profile_location"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>