<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_10"
    android:background="@drawable/sp_rect_round_3dp">

    <ImageView
        android:id="@+id/iv_item_favorite"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_item_favorite_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="太极一章"
        android:textColor="#ff000000"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/iv_item_favorite"
        app:layout_constraintTop_toTopOf="@+id/iv_item_favorite" />

    <TextView
        android:id="@+id/tv_item_favorite_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:text="跆拳道品势"
        android:textColor="#ff999999"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/tv_item_favorite_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_favorite_title" />

    <TextView
        android:id="@+id/tv_item_favorite_createtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:text="2020年12月24日"
        android:textColor="#ff999999"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/tv_item_favorite_type"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_favorite_type" />

    <TextView
        android:id="@+id/tv_item_favorite_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_play"
        android:paddingStart="16dp"
        android:paddingTop="5dp"
        android:paddingEnd="16dp"
        android:paddingBottom="5dp"
        android:text="播放"
        android:textColor="#ffffffff"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="18dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>